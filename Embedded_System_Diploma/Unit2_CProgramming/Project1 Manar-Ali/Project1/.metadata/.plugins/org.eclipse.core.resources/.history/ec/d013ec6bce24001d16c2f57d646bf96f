void traffic_light(char input5){
	if(input5 =='g'){
		speed =100, etemperature=160, rtemperature=35;
		engine_state=ON, controller_state=ON, AC=ON;
		//printf("Engine State : %d\n",engine_state);
		//printf("AC : %d\n",AC);
		printf("Vehicle speed: %d km/hr \n",speed);
		//printf("Room Temperature: %d\n",rtemperature);
		//printf("Engine Temperatue Controller State: %d\n",controller_state);
		//printf("Engine Temperature: %d\n\n",etemperature);
		current_state(y);

		printf("a. Turn off the engine\n");
		printf("b. Set the traffic light color\n");
		printf("c. Set the room temperature (Temperature Sensor)\n");
		printf("d. Set the engine temperature (Engine Temperature Sensor)\n");


	}
	else if (input5=='o'){
		speed=30, etemperature=160, rtemperature=35;
		engine_state=ON, controller_state=ON, AC=ON;

		//printf("Engine State : %d\n",engine_state);
		//printf("AC : %d\n",AC);
		printf("Vehicle speed: %d km/hr \n",speed);
		printf("Room Temperature: %d\n",rtemperature*((5/4)+1));
		//printf("Engine Temperatue Controller State: %d\n",controller_state);
		printf("Engine Temperature: %d\n\n",etemperature*((5/4)+1));
		current_state(y);

		printf("a. Turn off the engine\n");
		printf("b. Set the traffic light color\n");
		printf("c. Set the room temperature (Temperature Sensor)\n");
		printf("d. Set the engine temperature (Engine Temperature Sensor)\n");


	}
	else if (input5=='r'){
		speed=0, etemperature=30, rtemperature=35;
		engine_state=ON, controller_state=ON, AC=ON;
		//printf("Engine State : OFF\n");
		//printf("AC : ON\n");
		printf("Vehicle speed: 0 km/hr \n\n");
		//printf("Room Temperature: 35\n");
		//printf("Engine Temperatue Controller State: ON\n");
		//printf("Engine Temperature: 30\n\n");
		current_state(y);

		printf("a. Turn off the engine\n");
		printf("b. Set the traffic light color\n");
		printf("c. Set the room temperature (Temperature Sensor)\n");
		printf("d. Set the engine temperature (Engine Temperature Sensor)\n");


	}
}
void room_temperature(int temp1){
	if(temp1<10){
		AC=ON,rtemperature=20;
		speed=30, etemperature=150,controller_state=ON, engine_state=ON;
		//printf("Engine State : ON\n");
		printf("turn AC %d\n",AC);
		//printf("Vehicle speed: 30 km/hr \n");
		printf("Room Temperature: %d\n\n",rtemperature);
		//printf("Engine Temperatue Controller State: ON\n");
		//printf("Engine Temperature: 150\n\n");
		current_state(y);

		printf("a. Turn off the engine\n");
		printf("b. Set the traffic light color\n");
		printf("c. Set the room temperature (Temperature Sensor)\n");
		printf("d. Set the engine temperature (Engine Temperature Sensor)\n\n");

	}
	else if (temp1>30){
		AC=ON,rtemperature=20;
		speed=30, etemperature=150,controller_state=ON, engine_state=ON;
		//printf("Engine State : ON\n");
		printf("turn AC %d\n",AC);
		//printf("Vehicle speed: 100 km/hr \n");
		printf("Room Temperature: %d\n\n",rtemperature);
		//printf("Engine Temperatue Controller State: ON\n");
		//printf("Engine Temperature: 150\n\n");
		current_state(y);

		printf("a. Turn off the engine\n");
		printf("b. Set the traffic light color\n");
		printf("c. Set the room temperature (Temperature Sensor)\n");
		printf("d. Set the engine temperature (Engine Temperature Sensor)\n\n");

	}
	else{
		AC=OFF,rtemperature=20;
		speed=0, etemperature=20,controller_state=ON, engine_state=OFF;
		//printf("Engine State : OFF\n");
		printf("turn AC %d\n",AC);
		//printf("Vehicle speed: 0km/hr \n");
		printf("Room Temperature: %d\n",rtemperature);
		//printf("Engine Temperatue Controller State: ON\n");
		//printf("Engine Temperature: 20\n\n");
		current_state(y);

		printf("a. Turn off the engine\n");
		printf("b. Set the traffic light color\n");
		printf("c. Set the room temperature (Temperature Sensor)\n");
		printf("d. Set the engine temperature (Engine Temperature Sensor)\n\n");


	}
}
void engine_temperature(int temp2){
	if(temp2<100){
		AC=ON,rtemperature=35;
		speed=30, etemperature=125,controller_state=ON, engine_state=ON;
		//printf("Engine State : ON\n");
		//printf("AC : ON\n");
		//printf("Vehicle speed: 30 km/hr \n");
		//printf("Room Temperature: 35\n");
		printf("Engine Temperatue Controller State: %d\n",controller_state);
		printf("Engine Temperature: %d\n\n",etemperature);


		printf("a. Turn off the engine\n");
		printf("b. Set the traffic light color\n");
		printf("c. Set the room temperature (Temperature Sensor)\n");
		printf("d. Set the engine temperature (Engine Temperature Sensor)\n\n");

	}
	else if(temp2>150){
		AC=ON,rtemperature=35;
		speed=30, etemperature=125,controller_state=ON, engine_state=ON;
		//printf("Engine State : ON\n");
		//printf("AC : ON\n");
		//printf("Vehicle speed: 100 km/hr\n");
		//printf("Room Temperature: 35\n");
		printf("Engine Temperatue Controller State: %d\n",controller_state);
		printf("Engine Temperature: %d\n\n",etemperature);

		printf("a. Turn off the engine\n");
		printf("b. Set the traffic light color\n");
		printf("c. Set the room temperature (Temperature Sensor)\n");
		printf("d. Set the engine temperature (Engine Temperature Sensor)\n\n");

	}
	else{
		AC=ON,rtemperature=25;
		speed=0, etemperature=100,controller_state=OFF, engine_state=ON;
		//printf("Engine State : ON\n");
		//printf("AC : ON\n");
		//printf("Vehicle speed: 0 km/hr \n");
		//printf("Room Temperature: 25\n");
		printf("Engine Temperatue Controller State: OFF\n");
		printf("Engine Temperature: 100\n\n");

		printf("a. Turn off the engine\n");
		printf("b. Set the traffic light color\n");
		printf("c. Set the room temperature (Temperature Sensor)\n");
		printf("d. Set the engine temperature (Engine Temperature Sensor)\n\n");


	}
}

int main()
{
	setvbuf(stdout , NULL , _IONBF , 0);
	//int speed;
	char input1,input2,color,temp;


	printf("a. Turn on the vehicle engine\n");
	printf("b. Turn off the vehicle engine\n");
	printf("c. Quit the system\n\n");

	scanf(" %c",&input1);
	firstList(input1);
	scanf(" %c",&input2);
	//scanf(" %d",&speed);
	//vehicle_speed(speed);
	if(input1=='b'){
	second_choice(input2);

	}

	while(state_on){
	if(input1=='a'&& input2=='a'){
	third_choice(input2);
	}

	if(input1=='a'&&input2=='b'){
		fourth_choice(input2);
	}
	if(input1=='a'&& input2=='b'){
		scanf(" %c", &color);
		traffic_light(color);

	}
	if(input1=='a'&& input2=='c'){
		printf("enter the temperature\n");
		scanf(" %c",&temp);
		room_temperature(temp);
	}
	if(input1=='a'&& input2=='d'){
		printf("enter the temperature\n");
		scanf(" %c",&temp);
		engine_temperature(temp);
		}
	/*if(input1=='a' &&(input2=='c' || input2=='d') ){
		printf("enter the speed\n");
		scanf(" %d",&speed);
		vehicle_speed(speed);
	}*/
	scanf(" %c",&input2);
	}
	return 0;
}
